{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    // react 17+
    "plugin:react/jsx-runtime"
  ],
  "plugins": ["@typescript-eslint"],
  "rules": {
    // enable additional rules
    "indent": ["error", 2],
    "quotes": ["error", "double"],
    "semi": ["error", "always"]
  }
}
